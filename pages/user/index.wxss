/**index.wxss**/
page {
  height: 100%;
}
.container {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.userinfo {
  width: 100%;
  height: 400rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
  background-color: black;
}
.bg-blur {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  z-index: -1;
  filter: blur(16rpx);
  background-color: #fc8c23;
}
.task-num {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}
